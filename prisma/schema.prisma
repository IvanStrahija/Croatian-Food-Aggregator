// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and reviews
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String // Hashed with bcrypt
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  reviews   Review[]
  favorites Favorite[]
  accounts  Account[]
  sessions  Session[]

  @@index([email])
  @@map("users")
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Restaurant model
model Restaurant {
  id               String    @id @default(cuid())
  osmId            String    @unique
  name             String
  slug             String    @unique
  description      String?   @db.Text
  address          String
  city             String
  postalCode       String?
  country          String    @default("Croatia")
  latitude         Float?
  longitude        Float?
  phoneNumber      String?
  website          String?
  openingHours     String?
  imageUrl         String?
  averageRating    Float     @default(0)
  totalReviews     Int       @default(0)
  verified         Boolean   @default(false) // Admin verification for manual entries
  status           RestaurantStatus @default(ACTIVE)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  dishes               Dish[]
  serviceLinks         RestaurantServiceLink[]
  viewEvents           ViewEvent[]
  favorites            Favorite[]
  reviews              Review[]

  @@index([slug])
  @@index([city])
  @@index([latitude, longitude])
  @@index([verified])
  @@index([status])
  @@map("restaurants")
}

enum RestaurantStatus {
  ACTIVE
  PENDING_VERIFICATION
  INACTIVE
  CLOSED
}

// Link between restaurants and external services (Wolt, Glovo)
model RestaurantServiceLink {
  id           String   @id @default(cuid())
  restaurantId String
  service      Service
  externalId   String // Wolt/Glovo ID
  externalUrl  String?
  isActive     Boolean  @default(true)
  lastSyncedAt DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([restaurantId, service])
  @@index([service, externalId])
  @@map("restaurant_service_links")
}

enum Service {
  WOLT
  GLOVO
  MANUAL
}

// Dish model
model Dish {
  id               String   @id @default(cuid())
  restaurantId     String
  name             String
  slug             String
  description      String?  @db.Text
  category         String?
  imageUrl         String?
  averageRating    Float    @default(0)
  totalReviews     Int      @default(0)
  verified         Boolean  @default(false)
  isAvailable      Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  prices     DishPrice[]
  reviews    Review[]

  @@unique([restaurantId, slug])
  @@index([restaurantId])
  @@index([slug])
  @@index([category])
  @@index([verified])
  @@map("dishes")
}

// Price tracking for dishes across different services
model DishPrice {
  id           String   @id @default(cuid())
  dishId       String
  service      Service
  price        Float
  currency     String   @default("EUR")
  sourceMeta   Json?    // Additional metadata from source
  isActive     Boolean  @default(true)
  validFrom    DateTime @default(now())
  validUntil   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  dish Dish @relation(fields: [dishId], references: [id], onDelete: Cascade)

  @@index([dishId, service])
  @@index([dishId, isActive])
  @@index([updatedAt])
  @@map("dish_prices")
}

// Review model
model Review {
  id        String   @id @default(cuid())
  userId    String
  dishId    String?
  restaurantId String?
  rating    Int // 1-5 stars
  title     String?
  comment   String?  @db.Text
  imageUrl  String?
  isEdited  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  dish Dish? @relation(fields: [dishId], references: [id], onDelete: Cascade)
  restaurant Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, dishId]) // One review per user per dish
  @@unique([userId, restaurantId]) // One review per user per restaurant
  @@index([dishId])
  @@index([restaurantId])
  @@index([userId])
  @@index([rating])
  @@index([createdAt])
  @@map("reviews")
}

// View tracking for trending algorithm
model ViewEvent {
  id           String   @id @default(cuid())
  restaurantId String?
  dishId       String?
  viewType     ViewType
  sessionId    String? // For anonymous tracking
  userId       String?
  ipHash       String? // Privacy: hash of IP, not actual IP
  createdAt    DateTime @default(now())

  restaurant Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId, createdAt])
  @@index([dishId, createdAt])
  @@index([createdAt])
  @@map("view_events")
}

enum ViewType {
  RESTAURANT_VIEW
  DISH_VIEW
  SEARCH_RESULT_CLICK
}

// Favorite/bookmark functionality
model Favorite {
  id           String   @id @default(cuid())
  userId       String
  restaurantId String?
  dishId       String?
  createdAt    DateTime @default(now())

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, restaurantId])
  @@index([userId])
  @@index([restaurantId])
  @@index([createdAt])
  @@map("favorites")
}
